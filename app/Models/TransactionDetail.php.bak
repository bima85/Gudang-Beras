<?php

namespace App\Models;

use App\Models\Product;
use Illuminate\Database\Eloquent\Model;
use Illuminate\Database\Eloquent\Factories\HasFactory;

class TransactionDetail extends Model
{
    use HasFactory;
    
    /**
     * fillable
     *
     * @var array
     */
    protected $fillable = [
        'transaction_id', 'product_id', 'qty', 'price', 'satuan'
    ];

    /**
     * transaction
     *
     * @return \Illuminate\Database\Eloquent\Relations\BelongsTo
     */
    public function transaction()
    {
        return $this->belongsTo(Transaction::class);
    }

    /**
     * product
     *
     * @return \Illuminate\Database\Eloquent\Relations\BelongsTo
     */
    public function product()
    {
        return $this->belongsTo(Product::class);
    }

    /**
     * unit
     *
     * @return \Illuminate\Database\Eloquent\Relations\BelongsTo
     */
    public function unit()
    {
        // Relasi baru: satuan adalah id dari unit_conversions
        return $this->belongsTo(\App\Models\UnitConversion::class, 'satuan', 'id');
        // Relasi lama (berdasarkan unit string, jika ingin referensi lama, aktifkan baris di bawah)
        // return $this->belongsTo(\App\Models\UnitConversion::class, 'satuan', 'unit');
    }
}
